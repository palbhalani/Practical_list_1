// Write C++ program to find the size of int, char, float and double data types.

#include<iostream>
using namespace std;

main()
{
	cout<<"My Name Is Bhalani Pal"<<endl;
    cout<<"En_no :: 220130318080 "<<endl;

	cout<<"The size of integer data type in    "<<sizeof(int)<<" bytes "<<endl;
	cout<<"The size of float data type in      "<<sizeof(float)<<" bytes "<<endl;
	cout<<"The size of character  data type in "<<sizeof(char)<<" bytes "<<endl;
	cout<<"The size of double data type in     "<<sizeof(double)<<" bytes "<<endl;
	
	return 0;	
}
