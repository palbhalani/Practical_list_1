// Write C++ program to find factorial of the given number with the use of function.

#include<iostream>
using namespace std;
int fact(int );

int main()
{
	int n;
	
    cout<<"My Name Is Bhalani Pal"<<endl;
    cout<<"En_no :: 220130318080 "<<endl;
	
	cout<<"Enter the number : ";
	cin>>n;
	
	fact(n);
	
	return 0;
}
int fact(int n)
{
	int i,f=1;
	if(n<0)
	{
		cout<<"factorial of this number doesn't exisits ";
	}
	for(i=1;i<=n;i++)
	{
		f = f*i;
	}
		cout<<"This is factorial of a given number : "<<f;
    
    return 0;
}
