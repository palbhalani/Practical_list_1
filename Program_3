// Write a C program to enter length and breadth of a rectangle and find its perimeter & area.

#include<iostream>
using namespace std;

int main()
{
    int l,b,peri,area;

    cout<<"Enter length of rectangle :: ";
    cin>>l;
    cout<<"Enter breadth of rectangle :: ";
    cin>>b;

    peri=2*(l+b);
    area=l*b;

    cout<<"Perimeter of given rectangle is :: "<<peri<<endl;
    cout<<"Area of given rectangle is :: "<<area;
}
